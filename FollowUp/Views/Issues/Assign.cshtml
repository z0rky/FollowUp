@using FollowUp.ViewModels
@model FollowUp.ViewModels.IssuesAssignModel

@{
    ViewBag.Title = @FollowUp.Resources.Resource.IssuesTitleAssign;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@FollowUp.Resources.Resource.IssuesTitleAssign</h2>

    @using (Html.BeginForm("AssignSave", "Issues"))
    {
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Issue.Id)
    @*dropbox met solve users*@
    <div class="form-group">
        @*@Html.DropDownListFor(model => model.SolveUsers, new SelectList(Model.SolveUsers, "Email", "Email"), new { @class = "form-control" })*@
        @Html.DropDownListFor(model => model.Issue.AssignedToId, new SelectList(Model.SolveUsers, "Email", "Email"), new { @class = "form-control" })
    </div>


    <button type="submit" class="btn btn-primary">Save</button>
    <input type="button" class="btn btn-primary" value="@FollowUp.Resources.Resource.Back"
           onclick="location.href = '@Url.Action("IndexDispatcher", "Issues")'" />
</div>
    }
