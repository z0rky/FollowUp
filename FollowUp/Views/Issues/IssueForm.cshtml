@using FollowUp.Models
@model FollowUp.ViewModels.IssueFormViewModel

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Issue</h2>

@using (Html.BeginForm("Save", "Issues"))
{
    <div class="form-group">

        @Html.LabelFor(m => m.Issue.Subject)
        @Html.TextBoxFor(m => m.Issue.Subject, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Issue.Subject)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Issue.Description)
        @Html.TextAreaFor(m => m.Issue.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Issue.Description)
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.PriorityEnum)
        @Html.EnumDropDownListFor(m => m.PriorityEnum,   new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.PriorityEnum)
        
    </div>

    @*<div class="form-group">
        @Html.LabelFor(m => m.IssueStateEnum)

        @Html.DropDownListFor(m => m.IssueStateEnum, new SelectList(Enum.GetValues(typeof(IssueState))), new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.IssueStateEnum)

    </div>*@


    <button type="submit" class="btn btn-primary">Save</button>
    <input type="button" class="btn btn-primary" value="Back"
           onclick="location.href = '@Url.Action("IndexMyIssues", "Issues")'" />




}
